<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center">
        <h3><%= title %></h3>
        <a href="/contacts/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Contact</a>
      </div>

      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length > 0) { %>
            <% contacts.forEach((contact, i) => { %>
            <tr>
              <th scope="row"><%= i+1 %> </th>
              <td><%= contact.name %> </td>
              <td><%= contact.phone %> </td>
              <td>
                <a href="/contacts/<%= contact._id %> " class="btn btn-success badge rounded-pill">
                  <i class="bi bi-info-circle"></i> detail
                </a>
              </td>
            </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">Contact is empty.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>